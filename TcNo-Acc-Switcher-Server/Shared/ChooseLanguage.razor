@inject NavigationManager _navigationManager
@inject IConfiguration _configuration

@if (_cultures != null)
{
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
            @_selectedCulture
        <span class="caret"></span>
    </button>
    <ul class="custom-dropdown-menu dropdown-menu">
        @foreach (var culture in _cultures)
        {
        <li class="custom-dropdown-item dropdown-item" @onclick="() => RequestCultureChange(culture.Key)">@culture.Value</li>
        }
    </ul>
</div>
}

@code {
    private string _selectedCulture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    private Dictionary<string, string> _cultures;

    protected override void OnInitialized()
    {
        _cultures = _configuration.GetSection("Cultures")
            .GetChildren().ToDictionary(x => x.Key, x => x.Value);
    }

    private void RequestCultureChange(string key)
    {
        if (string.IsNullOrWhiteSpace(key)) return;

        var uri = new Uri(_navigationManager.Uri)
            .GetComponents(UriComponents.PathAndQuery, UriFormat.Unescaped);

        var query = $"?culture={Uri.EscapeDataString(key)}&" +
            $"redirectUri={Uri.EscapeDataString(uri)}";

        _navigationManager.NavigateTo("/Culture/SetCulture" + query, forceLoad: true);
    }
}
